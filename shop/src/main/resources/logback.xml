<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>

  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%5level [%thread] - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="com.shop.member.mapper.MemberMapper">
    <level value="trace"/>
  </logger>
  <logger name="com.shop.product.mapper.ProductMapper">
    <level value="trace"/>
  </logger>
  <logger name="com.shop.orders.mapper.OrderMapper">
    <level value="trace"/>
  </logger>
  
  <root level="debug">
    <appender-ref ref="stdout"/>
  </root>

</configuration>